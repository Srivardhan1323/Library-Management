<%layout('layouts/boilerplate') %>
<%- include('../layouts/librarian.ejs') %>
  <% let count=0; %> 
  <% for(student of allStudents){ %>
        <% if (student.book.length === 0) { %>
              
          <% } else { %>
            <% count=1;%>
            <h1><%=student.name%> </h1>
            <ul>
              <% student.book.forEach(book => { %>
                <img src="<%= book.photo %>" alt="" width="150" height="200">
                <li><%= book.title %> by <%= book.author %></li>
                <form action="/librarian/return/<%=student._id %>/<%=book._id%>?_method=DELETE" method="POST"><button>Return</button></form>
              <% }) %>
            </ul>
          <% } %>
<% } %>

<% if (count===0) { %>
     <h1>There are no books to return :)</h1>
<% } %>

  